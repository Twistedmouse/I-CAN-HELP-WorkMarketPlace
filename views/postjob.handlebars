    <div class="buttons flex">
        <div class="btn border border-gray-300 p-1 px-4 font-semibold cursor-pointer text-gray-500 ml-auto"> <a
                href="/">Cancel</a>
        </div>
        <div
            class="postjob-btn border border-indigo-500 p-1 px-4 font-semibold cursor-pointer text-gray-200 ml-2 bg-indigo-500">
